{
  "name": "es-node",
  "version": "1.0.0",
  "description": "Super-fast on-the-fly transpilation of modern JS, TypeScript and JSX using esbuild",
  "main": "lib/index.js",
  "keywords": [
    "esbuild",
    "typescript",
    "commonjs",
    "cjs",
    "node",
    "nodejs",
    "es6",
    "esm",
    "ts-node"
  ],
  "bin": {
    "esn": "./bin/esn.js"
  },
  "author": "Folke Lemaitre",
  "license": "Apache License 2.0",
  "scripts": {
    "clean": "rimraf lib jest.js register.js",
    "lint": "eslint src --ext .ts,.js --cache",
    "prebuild": "npm run clean && npm run lint",
    "build:dts": "tsc --declaration --emitDeclarationOnly --pretty",
    "build:js": "esbuild --platform=node --bundle --outdir=lib --sourcemap --target=es2017 --external:esbuild src/index.ts src/cli.ts",
    "build:jest": "esbuild --platform=node --bundle --outfile=jest.js --target=es2017 --external:esbuild src/jest.ts",
    "build:register": "esbuild --platform=node --bundle --outfile=register.js --target=es2017 --external:esbuild src/register.ts",
    "build": "npm run build:dts; npm run build:js; npm run build:jest; npm run build:register",
    "run": "node ."
  },
  "files": [
    "lib",
    "bin",
    "jest.js",
    "register.js"
  ],
  "husky": {
    "hooks": {
      "prepare-commit-msg": "npx devmoji -e --lint"
    }
  },
  "ultra": {
    "concurrent": [
      "lint",
      "prebuild",
      "build",
      "ultra"
    ]
  },
  "release-it": {
    "hooks": {
      "before:init": "ultra --color lint",
      "after:bump": "ultra --color build"
    },
    "npm": {
      "publish": true
    },
    "git": {
      "commitMessage": "chore(release): ${version}"
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "2.0.0",
    "@types/eslint": "7.2.6",
    "@types/eslint-plugin-prettier": "3.1.0",
    "@types/node": "14.14.10",
    "@types/prettier": "2.1.5",
    "@types/rimraf": "3.0.0",
    "@typescript-eslint/eslint-plugin": "4.9.0",
    "@typescript-eslint/parser": "4.9.0",
    "devmoji": "2.1.12",
    "eslint": "7.15.0",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.2.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-unicorn": "23.0.0",
    "husky": "4.3.5",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "release-it": "14.2.2",
    "rimraf": "3.0.2",
    "type-fest": "0.20.2",
    "typescript": "4.1.2",
    "typesync": "0.8.0"
  },
  "dependencies": {
    "esbuild": "^0.8.20"
  }
}
